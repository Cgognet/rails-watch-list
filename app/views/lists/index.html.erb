<div class="container">
  <h1> My lists </h1>
  <%= link_to 'Create a movie list', new_list_path, class: "btn btn-primary" %>
</div>

  <div class="container">
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.image_url %>')">
          <span><%=list.name%></span>
        </div>
      <% end %>
    </div>
  </div>
