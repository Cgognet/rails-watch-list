<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @list.image_url %>');">
    <span><%=@list.name%></span>
  </div>
</div>

<%= link_to 'add a movie', new_list_bookmark_path(@list), class: "btn btn-success" %>
<div class="container">
  <% @list.bookmarks.each do |bookmark|%>
    <div class="cards">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= bookmark.movie.poster_url %>')">
        <div class="title">
          <%= bookmark.movie.title %> <%= bookmark.movie.rating %> <i class="far fa-star"></i>
        </div>
        <%= bookmark.movie.overview %>
        <%= bookmark.comment%>
        <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>

  <% end %>
</div>
