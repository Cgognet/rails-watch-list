<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "popcornfood_122741.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "My list", lists_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "New list", new_list_path, class: "nav-link" %>
      </li>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key if @list.photo.attached?%>');">
    <span><%=@list.name%></span>
  </div>
</div>

<%= link_to 'add a movie', new_list_bookmark_path(@list), class: "btn btn-success" %>
<div class="container-card">
  <% @list.bookmarks.each do |bookmark|%>
      <div class="card-trip">
        <div class="card-movie" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= bookmark.movie.poster_url %>')">
        </div>
        <div class="card-trip-infos">
          <div>
            <h2><%= bookmark.movie.title %> <%= bookmark.movie.rating %> <i class="fas fa-star"></i></h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <div class= "footer">
              <h2><%= bookmark.comment%></h2>
              <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </div>

    </div>
  <% end %>
</div>
